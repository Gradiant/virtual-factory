{
  "simulator_connector_client": {
    "type": "mqtt",
    "mqtt": {
      "host": "mosquitto",
      "port": 1883
    }
  },
  "industrial_connector_client": {
    "type": "modbus",
    "modbus": {
      "host": "openplc",
      "port": 502,
      "slave": 1
    }
  },
  "simulator_names": [
    "tequilavalve"
  ],
  "tequilavalve": {
    "type": "valve",
    "logging": {
      "logging": true,
      "type": "opensearch",
      "opensearch": {
        "host": "opensearch",
        "port": 9200,
        "user": "admin",
        "password": "admin",
        "use_ssl": false,
        "verify_certs": false,
        "index": "factory-log-tequilavalve",
        "max_size_cache": 10
      }
    },
    "inputs": [
      "tequila"
    ],
    "outputs": [
      "mixtank1"
    ],
    "output_level": 100,
    "mapper_industry_properties": {
      "write": {
        "open": {
          "map": 801,
          "type": "coil"
        }
      },
      "read": {
        "open": {
          "map": 800,
          "type": "coil"
        }
      }
    }
  }
}